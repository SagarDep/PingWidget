<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_widget"

        />

    <LinearLayout
        android:id="@+id/widget_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_container_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/widget_host_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif"
                android:textColor="@color/text_white"
                android:text="Host:"
                />

            <TextView
                android:id="@+id/widget_host"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:textSize="@dimen/text_large"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/text_white"
                android:text="-"
                />

            <ImageView
                android:id="@+id/widget_start_pause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="@color/text_white"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"

            android:background="@color/text_white"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_graph_max_ping_value"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_tiny"
                android:text="-"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/text_white"
                />
            <ImageView
                android:id="@+id/widget_graph"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:gravity="center_horizontal|center_vertical"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="0">
                <TextView
                    android:id="@+id/widget_uptime_ping_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"
                    android:text="@string/widget_uptime"/>
                <TextView
                    android:id="@+id/widget_uptime_ping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"
                    android:text="-"
                    android:layout_below="@+id/widget_uptime_ping_label" />
                <TextView
                    android:id="@+id/widget_last_ping_msa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/widget_uptime_ping_value"
                    android:layout_alignBottom="@id/widget_uptime_ping_value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_tiny"
                    android:text="%"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/widget_last_ping_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"
                    android:text="@string/widget_last"/>
                <TextView
                    android:id="@+id/widget_last_ping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"
                    android:text="0"
                    android:layout_below="@+id/widget_last_ping_label" />
                <TextView
                    android:id="@+id/widget_last_ping_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/widget_last_ping_value"
                    android:layout_alignBottom="@id/widget_last_ping_value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_tiny"
                    android:text="@string/widget_ms"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/widget_max_ping_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"
                    android:text="@string/widget_max"/>
                <TextView
                    android:id="@+id/widget_max_ping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/widget_max_ping_label"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"
                    android:text="0"/>
                <TextView
                    android:id="@+id/widget_max_ping_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/widget_max_ping_value"
                    android:layout_alignBottom="@id/widget_max_ping_value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_tiny"
                    android:text="@string/widget_ms"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/widget_min_ping_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"
                    android:text="@string/widget_min"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/widget_min_ping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/widget_min_ping_label"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"
                    android:text="0"/>
                <TextView
                    android:id="@+id/widget_min_ping_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/widget_min_ping_value"
                    android:layout_alignBottom="@id/widget_min_ping_value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_tiny"
                    android:text="@string/widget_ms"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/widget_avg_ping_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_small"
                    android:text="@string/widget_avg"/>
                <TextView
                    android:id="@+id/widget_avg_ping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/widget_avg_ping_label"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_large"
                    android:text="0"/>
                <TextView
                    android:id="@+id/widget_avg_ping_ms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/widget_avg_ping_value"
                    android:layout_alignBottom="@id/widget_avg_ping_value"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_tiny"
                    android:text="@string/widget_ms"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>